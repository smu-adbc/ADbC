@model ADbC.Models.MCAnswer

<div class="modal modal fade" id="answer@(Model.RelativeAnswerID)" role="contentinfo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                @{var result = @Model.Correct ? "Correct" : "Incorrect";}
                <h3>@result.ToString()</h3>
            </div>
            <div class="modal-body">
                @if (Model.HasImage)
                {
                    string resultImgSrc = string.Empty;

                    switch (Model.RelativeAnswerID)
                    {
                        case 1:
                            resultImgSrc = "A";
                            break;
                        case 2:
                            resultImgSrc = "B";
                            break;
                        case 3:
                            resultImgSrc = "C";
                            break;
                        case 4:
                            resultImgSrc = "D";
                            break;
                    }
                    <img class="img-responsive" id="resultImage" src="@String.Concat(Model.ImagePath, @resultImgSrc, ".PNG")" style="margin:0px auto"/>
                }
                <h4>@Model.ResponseText</h4>
            </div>
        </div>
    </div>
</div>
